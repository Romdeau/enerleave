<div class="row">
  <div class="col-lg-6">
    <%= form_for [@travel_request, @travel_leg, @flight], :url => {:action => 'update'}, :html => {class: "form-horizontal edit-stock"} do |f| %>
    <% if @flight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
        <% @flight.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :takeoff_location, class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :takeoff_location, class: "form-control", value: "Brisbane" %>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label :landing_location, class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :landing_location, class: "form-control" %>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label :flight_date, class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <div class="input-group" id="DateTimePicker">
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
          <%= f.text_field :flight_date, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label :comment, class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :comment, class: "form-control" %>
      </div>
    </div>
    <div class="actions col-sm-offset-4 col-sm-8">
      <%= f.submit class: "btn btn-sm btn-success" %>
    </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#DateTimePicker').datetimepicker({
      pickTime: true
    });
  });
</script>
