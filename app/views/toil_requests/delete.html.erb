      <%= f.submit "Destroy Request", class: "btn btn-sm btn-danger", data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
  <div class="btn-group">
    <%= link_to 'Back', @toil_request, class: "btn btn-sm btn-primary" %>
  </div>
</div>
