<div class="page-header">
	<h1>Toil Tracking</h1>
</div>
<div id="content">
	<div class="paragraph">
		<h4 class="ener-highlight"><%= "#{@user.email} has #{@user.total_toil} minutes of toil available"%></h4>
		<% if can? :manage, :all %>
			<h4>NB: You'e logged in as an admin, so the totals reflect all Toil Requests. For individual totals navigate through the users individually <%= link_to "here", users_path%></h4>
		<% end %>

		<%= render 'toil' %>

		<br>
	</div>
</div>
<div class="row">
	<div class="col-sm-12 btn-group">
		<%= link_to "New Toil Request", new_toil_request_path, class: 'btn btn-sm btn-primary' %>
		<%= link_to "Spend Toil", new_spend_toil_path, class: 'btn btn-sm btn-primary' %>
	</div>
</div>
