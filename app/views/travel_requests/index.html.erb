<div class="page-header">
 <h1>Listing Travel Requests</h1>
</div>
<div class="content">
  <input id="filter" type="text" class="form-control" placeholder="Search For...">
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="ener-header">Requester</th>
        <th class="ener-header">Comment</th>
        <th></th>
      </tr>
    </thead>

    <tbody class="searchable">
      <% @travel_requests.each do |travel_request| %>
        <tr>
          <td><%= format_name(travel_request.user.email) %></td>
          <td><%= travel_request.comment %></td>
          <td>
            <div class="btn-group">
              <%= link_to 'Show', travel_request, class: "btn btn-sm btn-primary" %>
              <%= link_to 'Edit', edit_travel_request_path(travel_request), class: "btn btn-sm btn-primary" %>
              <% if can? :manage, :all %>
                <%= link_to 'Destroy', travel_request, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <div class="btn-group">
      <%= link_to 'New Travel request', new_travel_request_path, class: "btn btn-sm btn-success" %>
      <%= link_to 'New Destination request', new_request_destination_path, class: "btn btn-sm btn-success" %>
    </div>
    <p>
      A Travel Request includes flights to a destination<br>
      A Destination Request either does not require flights or the flights have been organised by a third party
    </p>
  </div>
</div>
