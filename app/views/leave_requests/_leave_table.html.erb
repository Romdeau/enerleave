<table class="table table-striped table-hover tablesorter" id="sorttable">
  <thead>
    <tr>
      <th>User</th>
      <th>Leave Type</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Total Hours</th>
    </tr>
  </thead>
  <tbody class="searchable">
    <% @leave_requests.each do |leave| %>
    <tr>
      <td><%= link_to leave.user.email, leave_request_path(leave) %></td>
      <td><%= leave.leave_type %></td>
      <td><%= leave.start_date.strftime("%d/%m/%Y") %></td>
      <td><%= leave.end_date.strftime("%d/%m/%Y") %></td>
      <td><%= format_leave_hours(leave) %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
