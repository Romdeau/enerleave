<div class="row">
  <table class="table table-striped table-hover tablesorter" id="sorttable">
    <thead>
      <tr>
        <th>User</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Total Hours</th>
      </tr>
    </thead>
    <tbody class="searchable">
      <% @leave_requests.each do |leave| %>
      <tr>
        <td><%= leave.user.email %></td>
        <td><%= leave.start_date %></td>
        <td><%= leave.end_date %></td>
        <td><%= format_leave_hours(leave) %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
