<div class="row">
  <div class="col-lg-8">
    <%= form_for [@travel_request, @travel_leg, @car_hire], :url => {:action => 'update'}, :html => {class: "form-horizontal edit-stock"} do |f| %>
      <% if @car_hire.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@car_hire.errors.count, "error") %> prohibited this car_hire from being saved:</h2>

          <ul>
          <% @car_hire.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field form-group">
        <%= f.label :driver, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :driver, class: "form-control" %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :pickup_date, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <div class="input-group" id="StartDateTimePicker">
            <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
            </span>
            <%= f.text_field :pickup_date, class: "form-control", value: @formatted_hire_date %>
          </div>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :pickup_location, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :pickup_location, class: "form-control" %>
        </div>
      </div>

      <div class="field form-group">
        <%= f.label :dropoff_date, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <div class="input-group" id="EndDateTimePicker">
            <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
            </span>
            <%= f.text_field :dropoff_date, class: "form-control", value: @formatted_return_date %>
          </div>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :dropoff_location, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :dropoff_location, class: "form-control" %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :comment, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :comment, class: "form-control" %>
        </div>
      </div>
      <div class="actions col-sm-offset-4 col-sm-8">
        <%= f.submit class: "btn btn-sm btn-success" %>
      </div>
    <% end %>

    <script type="text/javascript">
      $(function () {
        $('#StartDateTimePicker').datetimepicker();
      });
      $(function () {
        $('#EndDateTimePicker').datetimepicker();
      });
    </script>
  </div>
</div>
