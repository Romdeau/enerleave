<div class="page-header">
  <h1>Car Hire Details</h1>
  <h4>This Car Hire request is <% if @car_hire.booked == true %><span class="ener-header">Booked</span><% else %><span style="color:#ff0000;">Not Booked</span><% end %></h4>
  <% if @car_hire.booked == true %>
    <h4>Booking Comment: <%= @car_hire.booking_comment %></h4>
  <% end %>
</div>
<div class="content">
  <div class="row">
    <div class="col-sm-2 ener-header">
      <strong>Driver:</strong>
    </div>
    <div class="col-sm-4">
      <%= @car_hire.driver %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2 ener-header">
      <strong>Pickup location:</strong>
    </div>
    <div class="col-sm-4">
      <%= @car_hire.pickup_location %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2 ener-header">
      <strong>Pickup date:</strong>
    </div>
    <div class="col-sm-4">
      <%= @car_hire.pickup_date.strftime("%A") %> the <%= @car_hire.pickup_date.strftime("%d/%m/%y") %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2 ener-header">
      <strong>Dropoff date:</strong>
    </div>
    <div class="col-sm-4">
      <%= @car_hire.dropoff_date.strftime("%A") %> the <%= @car_hire.dropoff_date.strftime("%d/%m/%y") %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2 ener-header">
      <strong>Dropoff location:</strong>
    </div>
    <div class="col-sm-4">
      <%= @car_hire.dropoff_location %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2 ener-header">
      <strong>Comment:</strong>
    </div>
    <div class="col-sm-4">
      <%= @car_hire.comment %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-lg-6">
      <% if @car_hire.booked == false %>
        <%= link_to "Approve", approve_car_hire_path(params[:travel_request_id], params[:travel_leg_id], @car_hire), class: "btn btn-sm btn-success" %>
      <% end %>
      <div class="btn-group">
        <%= link_to 'Edit', edit_travel_request_travel_leg_car_hire_path(params[:travel_request_id], params[:travel_leg_id], @car_hire), class: "btn btn-sm btn-primary" %>
        <%= link_to 'Back', travel_request_travel_leg_path(params[:travel_request_id], params[:travel_leg_id]), class: "btn btn-sm btn-info" %>
      </div>
    </div>
  </div>
</div>
