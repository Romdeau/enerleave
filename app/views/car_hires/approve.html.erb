<div class="page-header">
  <h1>Approve Accommodation</h1>
</div>

<div class="content">
  <div class="row">
    <div class="col-lg-5">
      <h4>Please Double Check Booking Details</h4>
      <div class="row">
        <div class="col-sm-2 ener-header">
          <strong>Accommodation For:</strong>
        </div>
        <div class="col-sm-4">
          <strong><% @travel_leg.user.each do |user| %>
            <%= user.email %><br>
          <% end %></strong>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4 ener-header">
          <strong>Driver:</strong>
        </div>
        <div class="col-sm-6">
          <%= @car_hire.driver %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4 ener-header">
          <strong>Pickup location:</strong>
        </div>
        <div class="col-sm-6">
          <%= @car_hire.pickup_location %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4 ener-header">
          <strong>Pickup date:</strong>
        </div>
        <div class="col-sm-6">
          <%= @car_hire.pickup_date.strftime("%A") %> the <%= @car_hire.pickup_date.strftime("%d/%m/%y") %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4 ener-header">
          <strong>Dropoff date:</strong>
        </div>
        <div class="col-sm-6">
          <%= @car_hire.dropoff_date.strftime("%A") %> the <%= @car_hire.dropoff_date.strftime("%d/%m/%y") %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4 ener-header">
          <strong>Dropoff location:</strong>
        </div>
        <div class="col-sm-6">
          <%= @car_hire.dropoff_location %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4 ener-header">
          <strong>Comment:</strong>
        </div>
        <div class="col-sm-6">
          <%= @car_hire.comment %>
        </div>
      </div>
    </div>
    <div class="col-lg-7">
      <div class="row">
        <div class="col-lg-offset-1 col-lg-11">
          <h4>Booking Approval</h4>
        </div>
      </div>
      <%= form_for [@travel_request, @travel_leg, @car_hire], :url => {:action => 'approval'}, :html => {class: "form-horizontal edit-stock"} do |f| %>
        <% if @car_hire.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@car_hire.errors.count, "error") %> prohibited this accommodation from being saved:</h2>

            <ul>
            <% @car_hire.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field form-group">
          <%= f.label :booking_comment, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :booking_comment, class: "form-control" %>
            <p class="help-block">Airline/Booking References go here.</p>
          </div>
        </div>

        <div class="actions col-sm-offset-4 col-sm-8">
          <%= f.submit "Finalise Booking", class: "btn btn-sm btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <%= link_to "back", travel_request_travel_leg_car_hire_path(params[:travel_request_id], params[:travel_leg_id], @car_hire) , class: "btn btn-sm btn-info" %>
    </div>
  </div>
</div>
