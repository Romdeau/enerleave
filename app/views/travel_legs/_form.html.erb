<div class="row">
  <div class="col-lg-9">
    <%= form_for [@travel_request, @travel_leg], :url => {:action => 'create'}, :html => {class: "form-horizontal edit-stock"} do |f| %>
      <% if @travel_leg.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@travel_leg.errors.count, "error") %> prohibited this travel_leg from being saved:</h2>

          <ul>
          <% @travel_leg.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field form-group">
        <%= f.label :date_start, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <div class="input-group" id="StartDateTimePicker">
            <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
            </span>
            <% if @travel_leg.date_start != nil %>
              <%= f.text_field :date_start, class: "form-control", value: @formatted_start_date %>
            <% else %>
              <%= f.text_field :date_start, class: "form-control" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="field form-group">
        <%= f.label :date_end, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <div class="input-group" id="EndDateTimePicker">
            <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
            </span>
            <% if @travel_leg.date_end != nil %>
              <%= f.text_field :date_end, class: "form-control", value: @formatted_end_date %>
            <% else %>
              <%= f.text_field :date_end, class: "form-control" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="field form-group">
        <%= f.label :flight, "Flight Required?", class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <div class="input-group">
            <span class="input-group-addon"><%= f.check_box :flight %></span>
            <%= f.text_field :flight_comment, class: "form-control" %>
          </div>
          <p class="help-block">Example block-level help text here.</p>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :flight, "Hire Car Required?", class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <div class="input-group">
            <span class="input-group-addon"><%= f.check_box :car %></span>
            <%= f.text_field :car_comment, class: "form-control" %>
          </div>
          <p class="help-block">Example block-level help text here.</p>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :flight, "Accommodation Required?", class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <div class="input-group">
            <span class="input-group-addon"><%= f.check_box :accommodation %></span>
            <%= f.text_field :accommodation_comment, class: "form-control" %>
          </div>
          <p class="help-block">Example block-level help text here.</p>
        </div>
      </div>

      <div class="actions col-sm-offset-3 col-sm-9">
        <%= f.submit class: "btn btn-sm btn-success" %>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#StartDateTimePicker').datetimepicker({
      pickTime: false
    });
  });
  $(function () {
    $('#EndDateTimePicker').datetimepicker({
      pickTime: false
    });
  });
</script>
