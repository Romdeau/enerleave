<div class="page-header">
  <h1>Listing travel_legs</h1>
</div>
<div class="content">
  <input id="filter" type="text" class="form-control" placeholder="Search For...">
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="ener-header">Date start</th>
        <th class="ener-header">Date end</th>
        <th class="ener-header">Comment</th>
        <th></th>
      </tr>
    </thead>

    <tbody class="searchable">
      <% @travel_legs.each do |travel_leg| %>
        <tr>
          <td><%= travel_leg.date_start %></td>
          <td><%= travel_leg.date_end %></td>
          <td><%= travel_leg.comment %></td>
          <td>
            <div class="btn-group">
              <%= link_to 'Show', travel_leg, class: "btn btn-xs btn-primary" %>
              <%= link_to 'Edit', edit_travel_leg_path(travel_leg), class: "btn btn-xs btn-primary" %>
              <% if can? :manage, :all %>
                <%= link_to 'Destroy', travel_leg, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Travel leg', new_travel_leg_path, class: "btn btn-sm btn-primary" %>
</div>
