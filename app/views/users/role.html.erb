<div class="page-header">
	<h1>Edit Role for <%= format_name(@user.email) %></h1>
</div>
<div class="paragraph">
	<% if can? :manage, :all or current_user.id == 1 %>
		<%= render 'role' %>
		<div class="btn-group">
			<%= link_to 'Show', @user, class: 'btn btn-sm btn-primary' %>
			<%= link_to 'Back', users_path, class: 'btn btn-sm btn-primary' %>
		</div>
	<% end %>
</div>
