<div class="page-header">
  <h1>Toil Tracking</h1>
</div>
<div id="content">
  <div class="paragraph">
    <h2><%= "#{format_name(@user.email)} has #{@user.total_toil} minutes of toil available"%></h2>

    <%= render 'toil_requests/toil' %>

  </div>
</div>
<div style="margin-top:20px">
  <div class="btn-group">
    <%= link_to "New Toil Request", admin_create_toil_path(@user), class: 'btn btn-sm btn-primary' %>
    <%= link_to "Spend Toil", new_spend_toil_path, class: 'btn btn-sm btn-primary' %>
    <%= link_to "Back", user_path(@user), class: 'btn btn-sm btn-primary' %>
  </div>
</div>
