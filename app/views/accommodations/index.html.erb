<h1>Listing accommodations</h1>

<table>
  <thead>
    <tr>
      <th>Preffered location</th>
      <th>Check in</th>
      <th>Check out</th>
      <th>Comment</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accommodations.each do |accommodation| %>
      <tr>
        <td><%= accommodation.preffered_location %></td>
        <td><%= accommodation.check_in %></td>
        <td><%= accommodation.check_out %></td>
        <td><%= accommodation.comment %></td>
        <td><%= link_to 'Show', accommodation %></td>
        <td><%= link_to 'Edit', edit_accommodation_path(accommodation) %></td>
        <td><%= link_to 'Destroy', accommodation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

